{
  "name": "@sprucelabs/mercury-core-events",
  "version": "1.5.2",
  "description": "Events Mercury provides out of the box.",
  "skill": {
    "namespace": "mercury-core-events",
    "commandOverrides": {
      "sync.events": "--shouldSyncOnlyCoreEvents true"
    },
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-event-plugin",
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/mercury-client",
      "@sprucelabs/mercury-core-events",
      "@sprucelabs/spruce-skill-utils"
    ]
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "yarn clean && yarn build.tsc && yarn build.resolve-paths && yarn build.esm",
    "build.esm": "tsc --project tsconfig.dist.json && yarn build.resolve-paths.esm && yarn build.esm-postbuild",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.resolve-paths.esm": "TS_NODE_PROJECT=`pwd`/tsconfig.dist.json resolve-path-aliases --target build/esm --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.280",
    "@sprucelabs/jest-json-reporter": "^6.0.234",
    "@sprucelabs/resolve-path-aliases": "^1.0.223",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.219",
    "@sprucelabs/test-utils": "^3.0.251",
    "@types/node": "^16.11.7",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.2.0",
    "eslint-config-spruce": "^10.10.15",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@sprucelabs/mercury-types": "^26.1.750",
    "@sprucelabs/schema": "^25.3.474",
    "@sprucelabs/spruce-core-schemas": "^22.6.54",
    "@sprucelabs/spruce-event-utils": "^17.1.2"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
